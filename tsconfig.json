{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"exclude": ["node_modules"]
}
